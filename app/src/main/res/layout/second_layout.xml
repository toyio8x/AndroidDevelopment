<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <ImageView
        android:id="@+id/reg_bg"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/bg_register_cut" />
    <TextView
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="300dp"
        android:text="用户名" />

    <EditText
        android:id="@+id/username_reg_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username"
        android:layout_centerInParent="true"
        android:hint="请输入用户名"
        android:maxLines="1"
        android:minHeight="48dp" />

    <TextView
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/username_reg_input"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="密码" />

    <EditText
        android:id="@+id/password_reg_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password"
        android:hint="请输入密码"
        android:maxLines="1"
        android:minHeight="48dp" />
    <TextView
        android:id="@+id/password_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_reg_input"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:text="确认密码" />
    <EditText
        android:id="@+id/password_reg_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_confirm"
        android:hint="请确认密码"
        android:maxLines="1"
        android:minHeight="48dp" />

    <Button
        android:id="@+id/reg_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/password_reg_confirm"
        android:layout_centerInParent="true"
        android:layout_marginTop="25dp"
        android:text="注册" />
</RelativeLayout>